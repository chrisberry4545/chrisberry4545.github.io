{
  "name": "chris-berry-portfolio",
  "website": "https://chrisberry4545.github.io/",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all sass --parallel watch:*",
    "start": "yarn dev",
